<div class="page-header">
  <h1>Product#<%= params[:id] %></h1>
</div>

<% cache("product-#{params[:id]}") do %>
  <% unless @product.nil? %>
    <dl class="dl-horizontal description-list">
      <dt>Title</dt>
      <dd><%= @product.title %></dd>
      <dt>Description</dt>
      <dd><%= strip_tags @product.description %></dd>
      <dt>Image</dt>
      <dd><%= image_tag @product.image_url, :size => "170x170" %></dd>
      <dt>Price</dt>
      <dd><%= @product.price %></dd>
    </dl>
  <% end %>
<% end %>

<ul class="inline action-links">
  <li>
    <%= link_to 'Back to store', store_path %>
  </li>
</ul>