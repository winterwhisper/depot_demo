<div class="page-header">
  <h1>Product#<%= params[:id] %></h1>
</div>

<% cache("console-product-#{params[:id]}") do %>
  <% unless @product.nil? %>
    <dl class="dl-horizontal description-list">
      <dt>Title</dt>
      <dd><%= @product.title %></dd>
      <dt>Description</dt>
      <dd><%= strip_tags @product.description %></dd>
      <dt>Image</dt>
      <dd><%= image_tag @product.image_url, :size => "170x170" %></dd>
      <dt>Price</dt>
      <dd><%= @product.price %></dd>
      <dt>Stock</dt>
      <dd><%= @product.stock %></dd>
      <dt>Create At</dt>
      <dd><%= time_tag @product.created_at %></dd>
      <dt>Update At</dt>
      <dd><%= time_tag @product.updated_at %></dd>
    </dl>
  <% end %>
<% end %>

<ul class="inline action-links">
  <li>
    <%= link_to 'Edit', edit_console_product_path(params[:id]) %>
  </li>
  <li>
    <%= link_to 'Back', console_products_path %>
  </li>
</ul>
