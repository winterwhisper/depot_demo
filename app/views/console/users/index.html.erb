<div class="page-header">
  <h1>Users</h1>
</div>
<% cache(:all_users) do %>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Create at</th>
        <th colspan='2'>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for user in @users %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= role_name(user.role) %></td>
          <td><%= time_tag(user.created_at) %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_console_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @users %>
<% end %>