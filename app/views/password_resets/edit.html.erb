<%= simple_form_for @user, :url => password_reset_path(params[:id]), :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <div class="control-group">
      <div class='controls'>
        <%= f.submit "Update Password", :class => 'btn' %>
      </div>
    </div>
  </fieldset>
<% end %>