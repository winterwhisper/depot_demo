<div class="cart_title">Your Cart</div>
<table class='table'>
  <%= render(@cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<div id='actions'>
  <% unless params[:controller] == 'orders' && params[:action] == 'new' %>
    <%= button_to "Checkout", new_order_path, method: :get, :class => 'btn btn-success' %>
  <% else %>
    <%= button_to 'Back to store', store_path, :class => 'btn' %>
  <% end %>
  <%= button_to 'Empty cart', @cart, method: :delete, confirm: 'Are you sure?', :remote => true, :class => 'btn btn-danger' %>
</div>